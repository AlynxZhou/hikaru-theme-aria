{%- if pages and pages.length > 0 %}
<nav class="pagination">
  {%- for page in pages %}
  {%- if page.index !== index %}
  <a class="page-number" href="{{ getPath(page.docPath) }}">{{ page.index + 1 }}</a>
  {%- else %}
  <a class="page-number current" href="{{ getPath(docPath) }}">{{ index + 1 }}</a>
  {%- endif %}
  {%- endfor %}
</nav>
{%- endif %}
