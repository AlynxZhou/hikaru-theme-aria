{% block header %}
<header id="header" class="header"{% if themeConfig.color %} style="background: {{ themeConfig.color }};"{% endif %}>
  <div class="container">
    <div class="header-container">
      <div class="header-title">
        <h1 class="title"><a href="{{ siteConfig.rootDir }}">{{ siteConfig.title }}</a></h1>
        <h2 class="subtitle">{{ siteConfig.subtitle }}</h2>
      </div>
      {% if themeConfig.logo %}
      <div class="logo">
        <img src="{{ getPath(themeConfig.logo) }}" alt="logo">
      </div>
      {% endif %}
    </div>
    <nav id="nav" class="nav">
      <button class="nav-toggle" id="nav-toggle" aria-hidden="true">
        <i class="fas fa-bars" aria-label="{{ __("accessibility.navToggle") }}"></i>
      </button>
      <ul id="menu" role="menubar" aria-hidden="false">
        {% for e in themeConfig.menu %}
        <li role="menuitem"><a href="{{ getPath(e.link) }}"{% if isCurrentPath(e.link) %} class="current"{% endif %}>{% if e.icon %}{{ e.icon }}{% endif %}<span class="menu-text">{{ __(e.name) }}</span></a></li>
        {% endfor %}
      </ul>
      <button class="theme-toggle" id="theme-toggle">
        <i class="far fa-moon" aria-label="{{ __("accessibility.themeDark") }}"></i>
      </button>
    </nav>
  </div>
</header>
{% endblock %}
