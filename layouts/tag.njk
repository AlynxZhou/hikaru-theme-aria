{% extends "includes/layout.njk" %}

{% block title %}{{ __(title) }} {{ name }} - {{ siteConfig.title }}{% endblock %}

{% block content %}
{%- if themeConfig.pinnedMessage %}
{% include "includes/pinned-message.njk" %}
{%- endif %}
<div id="tag" class="tag page">
  <div class="page-title">
    <a class="title-link" href="{{ getPath(docPath) }}" itemprop="url">{{ name }}</a>
  </div>
  {%- if posts and posts.length > 0 %}
  {%- for post in posts %}
  <article class="article post card{% if themeConfig.animate %} animate{% endif %}" itemscope itemtype="http://schema.org/Article">
    <header id="post-header" class="post-header">
      <div class="post-title-simple" itemprop="name headline">
        <a class="title-link-simple" href="{{ getPath(post.docPath) }}" itemprop="url">{{ post.title }}</a>
      </div>
      {%- if post.created %}
      <span class="post-created">
        {%- set year = post.created.getFullYear() %}
        {%- set month = post.created.getMonth() + 1 %}
        {%- if month <= 9 %}
        {%- set month = ["0", month].join("") %}
        {%- endif %}
        {%- set date = post.created.getDate() %}
        {%- if date <= 9 %}
        {%- set date = ["0", date].join("") %}
        {%- endif %}
        {%- set hour = post.created.getHours() %}
        {%- if hour <= 9 %}
        {%- set hour = ["0", hour].join("") %}
        {%- endif %}
        {%- set minute = post.created.getMinutes() %}
        {%- if minute <= 9 %}
        {%- set minute = ["0", minute].join("") %}
        {%- endif %}
        {%- set second = post.created.getSeconds() %}
        {%- if second <= 9 %}
        {%- set second = ["0", second].join("") %}
        {%- endif %}
        <time title="post-created" itemprop="dateCreated datePublished" datetime="{{ post.created.toISOString() }}">{{ year }}-{{ month }}-{{ date }} {{ hour }}:{{ minute }}:{{ second }}</time>
      </span>
      {%- endif %}
    </header>
  </article>
  {%- endfor %}
  {%- endif %}
  {%- if pages and pages.length > 0 %}
  {% include "includes/pagination.njk" %}
  {%- endif %}
</div>
{% endblock %}
