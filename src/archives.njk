{% extends "layout.njk" %}

{% block css %}
<link rel="stylesheet" type="text/css" href="{{ pathPx.join(siteConfig.rootDir, "css/page.css") }}">
<link rel="stylesheet" type="text/css" href="{{ pathPx.join(siteConfig.rootDir, "css/post.css") }}">
{% endblock %}

{% block title %}{{ __(title) }} | {{ siteConfig.title }}{% if siteConfig.subtitle %} - {{ siteConfig.subtitle }}{% endif %}{% endblock %}

{% block content %}
<div id="archives" class="archives page">
  <h1 class="page-title">{{ __(title) }}</h1>
  <h2 class="page-counter">
    {% if site.posts.length > 1 %}
    {{ _p("postcount.more", site.posts.length) }}
    {% elif posts.length === 1 %}
    {{ _p("postcount.one", site.posts.length) }}
    {% else %}
    {{ __("postcount.none") }}
    {% endif %}
  </h2>
  {% set year = "1970" %}
  {% for post in posts %}
  {% if moment(post.date).format("YYYY") !== year %}
  {% set year = moment(post.date).format("YYYY") %}
  <h2 class="page-title">{{ year }}</h1>
  {% endif %}
  <article class="article post card{% if themeConfig.animate %} animate{% endif %}" itemscope itemtype="http://schema.org/Article">
    <header id="post-header" class="post-header">
      <h1 class="post-title-simple" itemprop="name headline">
        <a class="post-title-link post-title-link-external" href="{{ pathPx.join(siteConfig.rootDir, post.docPath) }}" itemprop="url">{{ post.title }}</a>
      </h1>
      {% if post.date %}
      <span class="post-date">
        <time title="post-date" itemprop="dateCreated datePublished" datetime="{{ moment(post.date).format() }}">{{ moment(post.date).format("MM-DD") }}</time>
      </span>
      {% endif %}
    </header>
  </article>
  {% endfor %}
  {% if pageArray %}
  <nav class="pagination">
    {% if pageIndex !== 0 %}
    <a class="extend prev" href="{{ pathPx.join(siteConfig.rootDir, pageArray[pageIndex - 1].docPath) }}"><i class="fas fa-angle-left" aria-label="{{ __("accessibility.prev_page") }}"></i></a>
    {% endif %}
    {% if pageIndex > 2 %}
    <a class="page-number" href="{{ pathPx.join(siteConfig.rootDir, pageArray[0].docPath) }}">1</a>
    <span class="space">…</span>
    <a class="page-number" href="{{ pathPx.join(siteConfig.rootDir, pageArray[pageIndex - 1].docPath) }}">{{ pageIndex }}</a>
    {% else %}
    {% for page in pageArray.slice(0, pageIndex) %}
    <a class="page-number" href="{{ pathPx.join(siteConfig.rootDir, page.docPath) }}">{{ page.pageIndex + 1 }}</a>
    {% endfor %}
    {% endif %}
    <span class="page-number current">{{ pageIndex + 1 }}</span>
    {% if pageIndex < pageArray.length - 1 - 2 %}
    <a class="page-number" href="{{ pathPx.join(siteConfig.rootDir, pageArray[pageIndex + 1].docPath) }}">{{ pageIndex + 2 }}</a>
    <span class="space">…</span>
    <a class="page-number" href="{{ pathPx.join(siteConfig.rootDir, pageArray[pageArray.length - 1].docPath) }}">{{ pageArray.length }}</a>
    {% else %}
    {% for page in pageArray.slice(pageIndex + 1, pageArray.length) %}
    <a class="page-number" href="{{ pathPx.join(siteConfig.rootDir, page.docPath) }}">{{ page.pageIndex + 1 }}</a>
    {% endfor %}
    {% endif %}
    {% if pageIndex !== pageArray.length - 1 %}
    <a class="extend next" href="{{ pathPx.join(siteConfig.rootDir, pageArray[pageIndex + 1].docPath) }}"><i class="fas fa-angle-right" aria-label="{{ __("accessibility.next_page") }}"></i></a>
    {% endif %}
  </nav>
  {% endif %}
</div>
{% endblock %}
