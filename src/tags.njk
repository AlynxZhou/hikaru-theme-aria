{% extends "layout.njk" %}

{% block css %}
<link rel="stylesheet" type="text/css" href="{{ pathPx.join(siteConfig.rootDir, "css/page.css") }}">
<link rel="stylesheet" type="text/css" href="{{ pathPx.join(siteConfig.rootDir, "css/post.css") }}">
{% endblock %}

{% block title %}{{ __(title) }} | {{ siteConfig.title }}{% if siteConfig.subtitle %} - {{ siteConfig.subtitle }}{% endif %}{% endblock %}

{% block content %}
<div id="tags" class="tags page">
  <article class="article post card{% if themeConfig.animate %} animate{% endif %}">
    <header class="post-header">
      <h1 class="post-title" itemprop="name headline">{{ __(title) }}</h1>
    </header>
    <main class="post-main">
      <h2 class="page-counter">
        {% if site.tagsLength > 1 %}
        {{ _p("tagcount.more", site.tagsLength) }}
        {% elif tags.length === 1 %}
        {{ _p("tagcount.one", site.tagsLength) }}
        {% else %}
        {{ __("tagcount.none") }}
        {% endif %}
      </h2>
      <div class="tags-cloud">
        {% for tag in tags %}
        <a href="{{ pathPx.join(siteConfig.rootDir, tag.docPath) }}">{{ tag.name }}</a>
        {% endfor %}
      </div>
    </main>
    <footer class="post-footer"></footer>
  </article>
</div>
{% endblock %}
