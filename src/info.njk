  {% endif %}
  <h1 class="author-name">{{ siteConfig.author }}</h1>
  <h2 class="author-description">{{ siteConfig.description }}</h2>
  <div class="site-count">
    {# {% if themeConfig.menu.archives %}
    <div class="archives-count">
      <div class="site-count-title">{{ __("archives") }}</div>
      <div><a href="{{ themeConfig.menu.archives }}">{{ site.posts.length }}</a></div>
    </div>
    {% endif %}
    {% if themeConfig.menu.categories %}
    {% if themeConfig.menu.archives %}
