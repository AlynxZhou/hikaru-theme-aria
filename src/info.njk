{% block author %}
<div class="info sidebar-item" id="info">
  {% if themeConfig.avatar %}
  <img class="author-avatar" src="{{ getAbsPath(themeConfig.avatar) }}" alt="{{ siteConfig.author }}">
  {% endif %}
  <h1 class="author-name">{{ siteConfig.author }}</h1>
  <h2 class="author-description">{{ siteConfig.description }}</h2>
  <div class="site-count">
    {% if themeConfig.menu.archives %}
    <div class="archives-count">
      <div class="site-count-title">{{ __("archives") }}</div>
      <div><a href="{{ getAbsPath(themeConfig.menu.archives) }}">{{ site.posts.length }}</a></div>
    </div>
    {% endif %}
    {% if themeConfig.menu.categories %}
    {% if themeConfig.menu.archives %}
    <span class="site-count-divider divider">|</span>
    {% endif %}
    <div class="categories-count">
      <div class="site-count-title">{{ __("categories") }}</div>
      <div><a href="{{ getAbsPath(themeConfig.menu.categories) }}">{{ site.categoriesLength }}</a></div>
    </div>
    {% endif %}
    {% if themeConfig.menu.tags %}
    {% if themeConfig.menu.categories or themeConfig.menu.archives %}
    <span class="site-count-divider divider">|</span>
    {% endif %}
    <div class="tags-count">
      <div class="site-count-title">{{ __("tags") }}</div>
      <div><a href="{{ getAbsPath(themeConfig.menu.tags) }}">{{ site.tagsLength }}</a></div>
    </div>
    {% endif %}
  </div>
  {% if siteConfig.feed.enable %}
  <div class="rss">
    <a class="rss-link button sidebar-item" href="{{ getAbsPath(siteConfig.feed.path) }}"><i class="fas fa-rss"></i>RSS</a>
  </div>
  {% endif %}
</div>
{% endblock %}
