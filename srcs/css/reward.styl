@import "variables"

div.reward {
  flex: 0 0 auto;
  margin: 1rem auto;
  width: 90%;
  text-align: center;
  transition: 0.3s ease-in-out;
  color: $color-reward-font;
  div.qr {
    text-align: center;
    div {
      padding: 0.5em;
      display: inline-block;
      img {
        width: 10rem;
        margin: 0 auto;
        display: block;
      }
      span {
        display: block;
      }
    }
  }
  button.button {
    cursor: pointer;
    border: none;
    outline: 0;
    padding: 0.5em 0.5em;
    margin: 0.5em 0;
    background: $color-button-reward-background;
    border: 0.1em solid $color-button-reward-border;
  }
}
html[data-theme="dark"] {
  div.reward {
    color: $color-dark-reward-font;
  }
}
