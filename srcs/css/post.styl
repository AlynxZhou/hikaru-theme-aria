@import "variables";
@import "reward";

article.post {
  flex: 1 1 auto;
  display: flex;
  flex-direction: column;
  flex-wrap: nowrap;
  justify-content: stretch;
  align-items: stretch;
  header.post-header {
    flex: 0 0 auto;
    text-align: center;
    h1.post-title-simple {
      margin: 0;
    }
    h1.post-title a.post-title-link {
      // Use inline-block because it is not supposed to hold the whole line.
      display: inline-block;
      position: relative;
      text-decoration: none;
      border-bottom: none;
      transition: 0.3s ease-in-out;
      color: $color-font;
      &::after {
        content: " ";
        position: absolute;
        width: 100%;
        height: 0.1em;
        bottom: 0;
        left: 0;
        background: $color-font;
        visibility: hidden;
        transform: scaleX(0);
        transition: 0.3s ease-in-out;
      }
      &:hover {
        &::after {
          visibility: visible;
          transform: scaleX(1);
        }
      }
      &:active {
        top: 0.1em;
      }
    }
    div.post-meta span.meta-block {
      display: block;
      margin: 0.5em;
    }
  }
  main.post-main {
    flex: 1 1 auto;
    display: flex;
    flex-direction: column;
    flex-wrap: nowrap;
    justify-content: stretch;
    align-items: stretch;
    a.header-link, a.headerlink {
      border-bottom: none;
      &:hover {
        border-bottom: none;
      }
      &:active {
        top: 0;
      }
      &::before {
        content: "#";
        margin-right: 0.3em;
      }
    }
  }
  a.post-tag {
    display: inline-block;
    background: $color-button-tag-first-background;
    border: 0.1em solid $color-button-tag-first-border;
    padding: 0.15em;
    &:nth-child(2n) {
      background: $color-button-tag-second-background;
      border: 0.1em solid $color-button-tag-second-border;
    }
    &:nth-child(3n) {
      background: $color-button-tag-third-background;
      border: 0.1em solid $color-button-tag-third-border;
    }
  }
  footer.post-footer {
    flex: 0 0 auto;
    text-align: center;
    div.post-tags a.post-tag {
      margin: 0.5em;
    }
  }
  div.tags-cloud {
    text-align: center;
    a.post-tag {
      margin: 0.1em 0.5em;
    }
  }
}
html[data-theme="dark"] {
  article.post {
    header.post-header {
      h1.post-title a.post-title-link {
        color: $color-dark-font;
        &::after {
          background: $color-dark-font;
        }
      }
    }
  }
}
