@import "variables";

footer.footer {
  flex: 0 0 auto;
  background: $color-footer-background;
  color: $color-footer-font;
  margin-top: 1.5rem;
  div.footer-container {
    width: auto;
    word-wrap: break-word;
    line-height: 2;
    padding: 1rem;
    display: flex;
    flex-direction: row;
    justify-content: stretch;
    align-items: stretch;
    flex-wrap: nowrap;
    div.footer-left {
      flex: 1 1 auto;
      text-align: left;
      width: 50%;
    }
    div.footer-right {
      flex: 1 1 auto;
      text-align: right;
      width: 50%;
      div.custom-info {
        width: 100%;
        word-wrap: break-word;
      }
    }
  }
  a {
    position: relative;
    color: $color-footer-link-font;
    text-decoration: none;
    border-bottom: 0.05em dotted $color-footer-link-font;
    transition: 0.3s ease-in-out;
    &:hover {
      color: $color-footer-link-hover-font;
      border-bottom: 0.05em solid $color-footer-link-hover-font;
    }
    &:active {
      top: 0.1em;
    }
  }
  div.back-to-top {
    display: block;
    text-align: center;
    button {
      border: none;
      outline: 0;
      background: $color-background;
      color: $color-link-font;
      display: inline-block;
      margin: 0 auto;
      padding: 0 0.75em;
      cursor: pointer;
      border-radius: 0 0 $corner-radius $corner-radius;
      font-size: 2rem;
      transition: 0.3s ease-in-out;
      &:hover {
        color: $color-link-hover-font;
        border: none;
      }
    }
  }
}
html[data-theme="dark"] {
  footer.footer {
    div.back-to-top {
      button {
        background: $color-dark-background;
        color: $color-dark-link-font;
        &:hover {
          color: $color-dark-link-hover-font;
        }
      }
    }
  }
}
@media (max-width: $media-footer-header-nav-fold-width) {
  footer.footer {
    div.footer-container {
      flex-direction: column-reverse;
      align-items: stretch;
      div.footer-left {
        text-align: center;
        width: auto;
      }
      div.footer-right {
        text-align: center;
        width: auto;
      }
    }
  }
}
