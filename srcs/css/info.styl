@import "variables";
@import "nib";
.info {
  text-align: center;
  .author-avatar {
    width: 90%;
    display: block;
    // Keep in center.
    margin: 1rem auto;
    border: 0.3rem solid white;
    border-radius: 50%;
    transition: box-shadow 0.3s ease-in-out, transform 1s ease-in-out;
    &:hover {
      box-shadow: 0 0 1em 0.5em rgba(0, 0, 0, 0.19);
      transform: rotateY(720deg);
    }
  }
  .author-name {
    color: $color-author-name-font;
    font-size: 1.8rem;
    font-weight: normal;
    margin: 0.5rem 0;
  }
  .author-description {
    color: $color-author-description-font;
    font-size: 1.2rem;
    font-weight: normal;
    margin: 0.5rem 0;
  }
  .site-count {
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: stretch;
    flex-wrap: nowrap;
    width: 100%;
    margin: 1rem 0;
    text-align: center;
    div.count-block {
      flex: 1 1 auto;
      border-left: 0.05rem $color-quote-font solid;
      border-right: 0.05rem $color-quote-font solid;
      &:first-child {
        border-left: none;
      }
      &:last-child {
        border-right: none;
      }
    }
    .site-count-title {
      margin: 0;
      font-size: 1.2rem;
    }
  }
  .rss {
    margin: 1rem 0;
    padding: 0;
    .rss-link {
      display: block;
      text-align: center;
      font-size: 1.5rem;
      color: $color-button-font;
      background: $color-button-rss-background;
      border: 0.1em solid $color-button-rss-border;
      padding: 0.2em;
      line-height: 1.25em;
    }
  }
}
