@import "variables";

nav.nav {
  position: relative;
  margin: 0;
  padding: 0 0.5em;
  overflow: hidden;
  background: $color-nav-background;
  // -0.5em is the offset for main shadow.
  box-shadow: 0 -0.5em 1em 0.5em rgba(0, 0, 0, 0.19);
  border-radius: $corner-radius $corner-radius 0 0;
  display: flex;
  flex-direction: row;
  justify-content: stretch;
  align-items: stretch;
  flex-wrap: nowrap;
  ul {
    display: block;
    list-style: none;
    padding: 0;
    margin: 0;
    flex: 1 1 auto;
    overflow: auto;
    scrollbar-width: thin;
    scrollbar-color: $color-scrollbar $color-scrollbar-background;
    scrollbar-color: var(--color-scrollbar) var(--color-scrollbar-background);
    white-space: nowrap;
    li {
      position: relative;
      text-align: center;
      display: inline-block;
      margin: 0 0.1em;
      a {
        position: relative;
        display: block;
        font-size: 1.5rem;
        // Keep Chinese and English the same height.
        line-height: 1.5;
        padding: 0.5em;
        color: $color-nav-link-font;
        text-decoration: none;
        transition: color 0.3s ease-in-out, background 0.3s ease-in-out;
        border-bottom: none;
        &:hover {
          color: $color-nav-link-hover-font;
          background: $color-nav-hover-background;
          border-bottom: none;
        }
        &:active {
          top: 0;
        }
        &.current {
          color: $color-nav-link-hover-font;
          background: $color-nav-current-background;
        }
      }
    }
  }
}
button.nav-toggle, button.theme-toggle {
  flex: 0 0 auto;
  text-align: center;
  border: none;
  outline: 0;
  background: inherit;
  font-size: 2rem;
  cursor: pointer;
  color: $color-nav-link-font;
  transition: color 0.3s ease-in-out, background 0.3s ease-in-out;
  &:hover {
    color: $color-nav-link-hover-font;
    background: $color-nav-hover-background;
    border: none;
  }
}
button.nav-toggle {
  display: none;
  width: 100%;
}
button.theme-toggle {
  display: block;
  width: 5%;
}
@media (max-width: $media-footer-header-nav-fold-width) {
  nav.nav {
    flex-direction: column;
    padding: 0;
    ul {
      display: none;
      white-space: normal;
      li {
        display: block;
        text-align: center
        margin: 0.1em 0;
      }
    }
  }
  button.nav-toggle, button.theme-toggle {
    // Take full line for easier click.
    display: block;
    flex: 1 1 auto;
    width: 100%;
  }
}
