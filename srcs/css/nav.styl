@import "variables";
@import "nib";
nav.nav {
  position: relative;
  margin: 0;
  padding: 0 0.5em;
  overflow: hidden;
  background: $color-nav-background;
  // -0.5rem is the offset for main shadow.
  box-shadow: 0 -0.5rem 1rem 0.5rem rgba(0, 0, 0, 0.19);
  border-radius: $corner-radius $corner-radius 0 0;
  display: block;
  ul {
    display: block;
    list-style: none;
    padding: 0;
    margin: 0;
    overflow: auto;
    white-space: nowrap;
    li {
      position: relative;
      text-align: center;
      display: inline-block;
      margin: 0 0.1em;
      a {
        position: relative;
        display: block;
        font-size: 1.5rem;
        // Keep Chinese and English the same height.
        line-height: 1.5;
        padding: 0.5em;
        color: $color-nav-link-font;
        text-decoration: none;
        transition: 0.3s ease-in-out;
        border-bottom: none;
        &:hover {
          color: $color-nav-link-hover-font;
          background: $color-nav-hover-background;
        }
        &:active {
          top: 0;
        }
        &.current {
          color: $color-nav-link-hover-font;
          background: $color-nav-current-background;
        }
      }
    }
  }
  button.nav-toggle {
    display: none;
    text-align: center;
    border: none;
    outline: 0;
    background: inherit;
    font-size: 2rem;
    cursor: pointer;
    color: $color-nav-link-font;
    width: 100%;
    transition: 0.3s ease-in-out;
    &:hover {
      color: $color-nav-link-hover-font;
      background: $color-nav-hover-background;
    }
  }
  @media (max-width: $media-footer-header-nav-fold-width) {
    padding: 0;
    button.nav-toggle {
      // Take full line for easier click.
      display: block;
    }
    ul {
      display: none;
      white-space: normal;
      li {
        display: block;
        text-align: center
        margin: 0.1em 0;
      }
    }
  }
}
