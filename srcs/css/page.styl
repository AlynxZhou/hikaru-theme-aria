@import "variables";
@import "nib";
@import "comment";
.page {
  .page-title {
    text-align: center;
  }
  .page-counter {
    text-align: center;
  }
  .pagination {
    margin: 1rem 0;
    padding: 1rem 0;
    display: block;
    text-align: center;
    color: $color-link-font;
    .page-number, .extend {
      overflow: hidden;
      font-size: 1.2rem;
      padding: 0.5em;
      margin: 0 0.5em;
      text-decoration: none;
      border-bottom: 0.15em solid $color-link-font;
      transition: 0.3s ease-in-out;
      &:hover {
        border-bottom: 0.15em solid $color-link-hover-font;
      }
      &.current {
        color: $color-link-hover-font;
        border-bottom: 0.15em solid $color-link-hover-font;
        border-top: 0.07em solid $color-link-hover-font;
      }
    }
    .space {
      margin: 0 0.5em;
      color: $color-link-font;
    }
  }
  .page-nav {
    margin: 0 1rem;
    padding: 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: stretch;
    flex-wrap: nowrap;
    .page-nav-item {
      flex: 1 1 auto;
      font-size: 1.2rem;
      a {
        position: relative;
        display: inline-flex;
        flex-direction: row;
        flex-wrap: nowrap;
        align-items: center;
        text-decoration: none;
        border-bottom: none;
        span {
          margin: 0.3em;
        }
        &:active {
          top: 0.1em;
        }
      }
    }
    .page-nav-next {
      width: 45%;
      text-align: left;
      a {
        justify-content: flex-start;
      }
    }
    .page-nav-prev {
      width: 45%;
      text-align: right;
      a {
        justify-content: flex-end;
      }
    }
  }
}
